@model MoviesWebApplication.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Movie in details</h1>

<div>
    <h4>Дізнайся більше про фільм</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MoviesGenres)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(string.Join(", ", @Model.MoviesGenres.Select(x => x.Genre.Name).ToList()))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HasOscar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HasOscar)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Production) 
        </dt>
        <dd class = "col-sm-10">
            @Html.ActionLink(@Model.Production.Name, "Details", "Productions", routeValues: new {id = @Model.ProductionId})
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistsJobsInMovies)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(string.Join(", ", @Model.ArtistsJobsInMovies.Select(x => x.Artist.Name + " - " + x.Job).ToList()))
        </dd>
    </dl>
</div>
